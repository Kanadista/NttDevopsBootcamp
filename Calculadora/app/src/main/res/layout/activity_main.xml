<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/numbers"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="64dp"
        android:firstBaselineToTopHeight="100dp"
        android:gravity="center_vertical"
        android:background="@drawable/textview_border"
        android:textSize="40sp"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/prevNumber"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textSize="50sp"
        android:firstBaselineToTopHeight="100dp"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/numbers"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnDivide"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:text="/"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numbers" />

    <Button
        android:id="@+id/btnMultiply"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_marginTop="15dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="*"
        app:layout_constraintTop_toBottomOf="@+id/numbers"
        app:layout_constraintLeft_toRightOf="@id/btnDivide"/>
    <Button
        android:id="@+id/btnSubstract"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_marginTop="15dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="-"
        app:layout_constraintTop_toBottomOf="@+id/numbers"
        app:layout_constraintLeft_toRightOf="@id/btnMultiply"/>

    <Button
        android:id="@+id/btnAdd"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_marginTop="15dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="+"
        app:layout_constraintTop_toBottomOf="@+id/numbers"
        app:layout_constraintLeft_toRightOf="@id/btnSubstract"/>
    <Button
        android:id="@+id/btn7"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDivide" />

    <Button
        android:id="@+id/btn8"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="8"
        app:layout_constraintTop_toBottomOf="@+id/btnDivide"
        app:layout_constraintLeft_toRightOf="@id/btn7"


        />
    <Button
        android:id="@+id/btn9"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="9"
        app:layout_constraintTop_toBottomOf="@id/btnDivide"
        app:layout_constraintLeft_toRightOf="@id/btn8" />


ยก
    <Button
        android:id="@+id/btnOperate"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="400dp"
        android:text="="
        app:layout_constraintTop_toBottomOf="@id/btnDivide"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        />

    <Button
        android:id="@+id/btn4"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="4"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/btn5"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="5"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintLeft_toRightOf="@id/btn4"

        />
    <Button
        android:id="@+id/btn6"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="6"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintLeft_toRightOf="@id/btn5"

        />
    <Button
        android:id="@+id/btn1"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/btn2"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="2"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        />

    <Button
        android:id="@+id/btn3"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="3"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        />
    <Button
        android:id="@+id/btnErase"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="@string/erase"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btn0"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintLeft_toRightOf="@id/btnErase"
        />

    <Button
        android:id="@+id/btnComma"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="30sp"
        app:cornerRadius="0dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="."
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        />


</androidx.constraintlayout.widget.ConstraintLayout>